@model Book


<li class="list-group-item" style="width: 700px !important;">
    <div class="media align-items-lg-center flex-column flex-lg-row p-1">
        <div class="media-body order-2 order-lg-1">
            <h5 class="mt-0 font-weight-bold mb-1">@Model.Title</h5>
            <p class="font-italic text-muted mb-0 small">@Model.AuthorLastName, @Model.AuthorFirstName</p>
            <div class="d-flex align-items-center justify-content-between mt-1">
                <h3 class="font-weight-bold my-1">$@Model.Price</h3>
            </div>
            <form id="@Model.BookId" asp-page="/Cart" method="post">
                <input type="hidden" asp-for="BookId" />
                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                <span class="card-text p-1">
                    <button type="submit" class="btn-success btn-sm pull-right" style="float:right">
                        Add To Cart
                    </button>
                </span>
            </form>
            <br />
            <p style="float: right;">Publisher: @Model.Publisher, ISBN: @Model.Isbn, @Model.Pages pages</p>
            <span class="badge" style="float:left;">@Model.Classification</span>
            <span class="badge" style="float:left;">@Model.Category</span>
        </div>
    </div> 
</li>
<br />